import kotlinx.serialization.descriptors.PrimitiveKind.BOOLEAN;

CREATE TABLE UserAccessToken (
    token TEXT
);

insertToken:
INSERT INTO UserAccessToken VALUES(?);

fetchToken:
SELECT * FROM UserAccessToken;

deleteToken:
DELETE FROM UserAccessToken;

CREATE TABLE Settings(
    isDarkModeOn INTEGER DEFAULT 1
);

getIsDarkModeOn:
SELECT isDarkModeOn FROM Settings;

insertIsDarkModeOn:
INSERT INTO Settings (isDarkModeOn) VALUES(?);

updateIsDarkModeOn:
UPDATE Settings SET isDarkModeOn = ?;
